@model IEnumerable<MVCAddressBook.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card glass-style lightGlass mt-2 m-2 p-2">
                <a asp-action="Create" class="btn btn-success">
                    Add A New Category <i class="fas fa-plus-square text-light"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container mt-1">
        <div class="row">
                    
                        @foreach (var item in Model)
                        {
                <div class="col-12 col-md-4 col-lg-3 col-xl-2 d-flex justify-content-center">
                    <div class="card glass-style lightGlass animate__animated animate__pulse p-4 mt-2">

                        <div class="card-body">

                            <div class="row">
                                <div class="col">
                                    <h6>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </h6>
                                </div>
                            </div>

                        </div>

                        <div class="d-flex justify-content-end">
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" >
                                <i class="fas fa-trash-alt text-light"></i>
                            </a>
                        </div>

                    </div>
                </div> 
                        }
                 
            

        </div>
</div>


    

        
        
