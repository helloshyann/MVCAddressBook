@model MVCAddressBook.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-1">

    <div class="glass-style lightGlass p-4 mt-5">

        <div class="row">
            <div class="col-12">
                <h1>Delete @Model.Name</h1>
                <hr />
            </div>
        </div>

        <div class="row justify-content-center">


                <div class="row">
                    <div class="col-12">
                        <h3>Are you sure you want to delete the category called "@Model.Name"?</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 d-flex justify-content-end">
                        <div class="m-1">
                            <a asp-action="Index" class="btn btn-dark">Back</a>
                        </div>
                        <form asp-action="Delete" class="m-1">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </form>
                    </div>
                </div>
        </div>
    </div>

</div>

