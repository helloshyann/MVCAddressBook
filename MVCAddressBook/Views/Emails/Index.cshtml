@model MVCAddressBook.Models.ViewModels.EmailTemplateViewModel

@{ 
    ViewData["Title"] = "Email a Category";
}


<div class="container glass-style lightGlass mt-2 m-2 p-4">

        <div class="row row-cols-1">
            <h1 class="animate__animated animate__fadeIn">
                Send a Group Message
            </h1>
            <hr />
            <div class="col">
                <form asp-controller="Emails" asp-action="Index" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                        <select class="form-select" name="categoryId" asp-items="Model.CategoryList">
                            <option>Choose category</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Subject" class="form-label"></label>
                        <input asp-for="Subject" class="form-control" />
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Message" class="form-label"></label>
                        <textarea asp-for="Message" class="form-control"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <input type="submit" value="Send Email" class="btn btn-success" />
                    </div>
                </form>
            </div>
        </div>

</div>

    
