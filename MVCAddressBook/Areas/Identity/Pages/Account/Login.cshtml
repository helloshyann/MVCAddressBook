@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-6">
        <section class="glass-style lightGlass animate__animated animate__pulse mt-2 m-2 mb-4 p-2">
            <form id="account" method="post">
                <h4>Use a local account to log in.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group mt-1">
                    <p>
                        <button type="submit" class="btn btn-dark">Log in</button>
                    </p>                    
                </div>

                <div class="form-group">

                    <p>
                        <a class="btn btn-success" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                        <a class="btn btn-danger" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a class="btn btn-warning" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-6">
        <section class="glass-style lightGlass animate__animated animate__pulse mt-2 m-2 mb-4 p-2">
            <form id="account" method="post">
                <h4>Log In With A Demo User</h4>
                <hr />
                <p>
                    Demo the full application without having the need to create an account by clicking the button below.
                </p>
                <p>
                    <button type="submit" name="demoEmail" value="DemoUserEmail" class="btn btn-dark">Demo Log In</button>
                </p>
                
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
